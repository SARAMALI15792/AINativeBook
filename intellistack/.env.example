# IntelliStack Environment Configuration
# Copy this to .env and fill in the values

# ======================
# Application Settings
# ======================
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-min-32-characters-long

# ======================
# Database (PostgreSQL)
# ======================
DATABASE_URL=postgresql://intellistack:intellistack_dev@localhost:5432/intellistack

# ======================
# Redis Cache
# ======================
REDIS_URL=redis://localhost:6379/0

# ======================
# Qdrant Vector Database
# ======================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=

# ======================
# AI Services
# ======================
# OpenAI API (Required)
OPENAI_API_KEY=sk-your-openai-api-key

# Cohere API (Optional - for reranking)
COHERE_API_KEY=

# ======================
# Better-Auth OIDC Server
# ======================
BETTER_AUTH_URL=http://localhost:3001
BETTER_AUTH_JWKS_URL=http://localhost:3001/.well-known/jwks.json
BETTER_AUTH_SECRET=your-secret-key-min-32-characters-long-for-jwt-signing
BETTER_AUTH_TRUST_HOST=true

# OAuth Providers (for Better-Auth)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Email Service (Better-Auth)
RESEND_API_KEY=

# ======================
# ChatKit Configuration
# ======================
CHATKIT_API_URL=http://localhost:8000/chatkit
CHATKIT_API_DOMAIN_KEY=domain_pk_localhost_dev

# ======================
# Rate Limiting
# ======================
RATE_LIMIT_AUTH=60
RATE_LIMIT_UNAUTH=10
RATE_LIMIT_CHATKIT_STUDENT=20

# ======================
# CORS
# ======================
CORS_ORIGINS=http://localhost:3001

# ======================
# Logging
# ======================
LOG_LEVEL=INFO
LOG_FORMAT=console
