{
  "name": "intellistack-auth-server",
  "version": "1.0.0",
  "description": "Better-Auth OIDC server for IntelliStack Platform",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate": "npx better-auth migrate",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "auth",
    "oidc",
    "jwt",
    "better-auth",
    "intellistack"
  ],
  "author": "IntelliStack Team",
  "license": "MIT",
  "dependencies": {
    "better-auth": "^1.3.4",
    "@better-auth/express": "^1.3.4",
    "express": "^4.18.2",
    "drizzle-orm": "^0.30.10",
    "drizzle-kit": "^0.20.8",
    "pg": "^8.11.3",
    "postgres": "^3.4.3",
    "dotenv": "^16.3.1",
    "resend": "^3.0.0",
    "zod": "^3.22.4",
    "cors": "^2.8.5",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/cors": "^2.8.17",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "prettier": "^3.1.1",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
