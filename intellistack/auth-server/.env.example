# Better-Auth OIDC Server Environment Configuration
# Copy this to .env and fill in the values

# ======================
# Application Settings
# ======================
NODE_ENV=development
PORT=3001
BETTER_AUTH_URL=http://localhost:3001
BETTER_AUTH_TRUST_HOST=true

# ======================
# Database
# ======================
DATABASE_URL=postgresql://intellistack:intellistack_dev@localhost:5432/intellistack

# ======================
# JWT Configuration
# ======================
# Minimum 32 characters for HS256/RS256 signing
BETTER_AUTH_SECRET=your-secret-key-min-32-characters-long-for-jwt-signing

# ======================
# Email Service (Resend)
# ======================
# Get API key from https://resend.com
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# From email address for sending verification/reset emails
EMAIL_FROM=noreply@intellistack.dev
SUPPORT_EMAIL=support@intellistack.dev

# ======================
# OAuth 2.0 Providers
# ======================

# Google OAuth
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=xxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=xxx-xxx

# GitHub OAuth
# Get credentials from: https://github.com/settings/developers
GITHUB_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxx
GITHUB_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxx

# ======================
# Logging
# ======================
LOG_LEVEL=info

# ======================
# CORS
# ======================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ======================
# Session Configuration
# ======================
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=lax
SESSION_MAX_AGE=604800
