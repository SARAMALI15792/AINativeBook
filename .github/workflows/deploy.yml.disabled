name: Deploy to GitHub Pages

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

jobs:
  deploy:
    name: Deploy to GitHub Pages
    runs-on: ubuntu-latest
    permissions:
      contents: write

    steps:
      - uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 20

      # Build Next.js Frontend
      - name: Install frontend dependencies
        run: |
          cd intellistack/frontend
          npm install --legacy-peer-deps

      - name: Build Next.js frontend
        run: |
          cd intellistack/frontend
          npm run build

      # Build Docusaurus Content
      - name: Install content dependencies
        run: |
          cd intellistack/content
          npm ci

      - name: Build Docusaurus content
        run: |
          cd intellistack/content
          npm run build

      # Combine both builds
      - name: Combine builds
        run: |
          mkdir -p combined-build
          # Copy Next.js frontend to root
          cp -r intellistack/frontend/out/* combined-build/
          # Copy Docusaurus to /docs subdirectory
          mkdir -p combined-build/docs
          cp -r intellistack/content/build/* combined-build/docs/

      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v3
        if: github.ref == 'refs/heads/main'
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./combined-build
          publish_branch: gh-pages